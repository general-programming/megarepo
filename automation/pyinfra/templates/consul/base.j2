{% if consul_server -%}
server = true
bootstrap_expect = 3

auto_encrypt {
  allow_tls = true
}
{% else -%}
server = false
{% endif -%}

datacenter = "{{ consul_datacenter }}"
data_dir = "/opt/consul"
client_addr = "127.0.0.1"
retry_join = {{ consul_servers | to_json | replace('"', '\'') }}
ssl = true