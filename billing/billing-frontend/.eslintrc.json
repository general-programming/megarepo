{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": ["react", "react-redux"],
    "extends": [
        "airbnb"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "jsx": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-unused-vars": "warn",
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/destructuring-assignment": ["warn"],
        "react/forbid-prop-types": ["warn"],
        "react/require-default-props": ["warn"],
        "import/no-extraneous-dependencies": ["warn"],
        "import/prefer-default-export": ["warn"]
    }
}