{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "argocd": {
    "fileMatch": ["argocd/.+\\.yaml$"]
  },
  "prHourlyLimit": 10,
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/theessem/mastodon",
        "ghcr.io/theessem/mastodon-streaming"
      ],
      "versioning": "regex:^nightly\\.(?<major>\\d+)-(?<minor>\\d+)-(?<patch>\\d+)$"
    }
  ]
}
